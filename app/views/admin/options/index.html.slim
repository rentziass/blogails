  - @options.each do |option|
    tr
      th Title
      td = option.title
    tr
      th SubTitle
      td = option.subtitle
    tr
      th Footer
      td = option.footer
    tr
      th Copyright
      td = option.copyright
    tr
      th Analitics
      td = option.analitics
    tr
      th Number per page
      td = option.number_per_page
    tr
      - if current_user.role.name == 'admin'
        td = link_to 'Edit', edit_admin_option_path(option)
      end
      
