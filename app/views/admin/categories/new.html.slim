.row
  .col.s12
    h3 New Category

= form_for @category, url: admin_categories_path do |f|
  .row
    .col.s12.m9
      .card
        .card-content
          h6 = :title
          .input-field
            = f.text_field :title, placeholder:"Your category's title"
            /= f.label :title, style:'margin: 0px'

      .card
        .card-content
          h6 = :description
          .input-field
            = f.text_area :description, class:'materialize-textarea', placeholder:"Your article's description"
            /= f.label :description

    .col.s12.m3
      = f.button "Add Category", class:"btn light-blue darken-4 waves-effect waves-light", style: "width: 100%; margin: 0px"