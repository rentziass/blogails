h1 Listing admin_article

= form_tag admin_articles_path, method: :get do
  - if params[:query].present?
    = link_to "clear", admin_articles_path
  = text_field_tag :query, params[:query], id: "article_search", autocomplete: "on"
  = submit_tag "Search"

table
  thead
    tr
      th User
      th Name
      th Title
      th Summary
      th Text
      th Date
      th Categories
      th

  tbody
    - @articles.each do |article|
      tr 
        td = article.user_id
        td = article.user.first_name
        td = article.title
        td = article.summary
        td = article.text.html_safe
        td = article.date.strftime("%d-%m-%Y | %H:%M")
        - article.categories.each do |category|
          td = category.title
        end
        td = link_to 'Show', admin_article_path(article)
        - if current_user.role.name == "admin" || article.user_id == current_user.id
          td = link_to 'Edit', edit_admin_article_path(article)
          td = button_to "Destroy", admin_article_path(article), :method=>:delete, :class=>:destroy, onclick: 'return confirm("Are you sure?")'
        end
br
p
